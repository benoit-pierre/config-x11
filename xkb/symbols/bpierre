partial hidden xkb_symbols "vt_switch" {

    key <FK01> {
	type="CTRL+ALT",
	actions[Group1]= [ NoAction(), NoAction(), NoAction(), NoAction(), SwitchScreen(Screen=1, !SameServer) ]
