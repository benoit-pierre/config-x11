xkb_symbols "us" {
    include "us(basic)"
    include "bpierre(prog_level)"
    include "bpierre(swap_ralt_rctrl_lctrl)"
    include "bpierre(swap_caps_backspace)"
    name[Group1]= "English (bpierre)";
};

